{
  // === EXISTING SETTINGS (preserved) ===
  "geminicodeassist.agentYoloMode": true,
  "python-envs.defaultEnvManager": "ms-python.python:system",
  "python-envs.pythonProjects": [],
  "git.ignoreLimitWarning": true,

  // === COPILOT INSIDERS OPTIMIZED CONFIG ===
  // No es posible eliminar legítimamente límites de tokens / rate limits.
  // Se optimiza calidad de señal, contexto y flujo de trabajo.

  // --- Copilot Core & Chat ---
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.chat.showSteps": true,
  "github.copilot.chat.acceptedPromptHistory": 150,
  "workbench.experimental.chatAgentMode": true,
  "github.copilot.chat.context.maxFiles": 60,
  "github.copilot.chat.context.experimental.symbolSearch": true,
  "github.copilot.chat.experimental.editorContext": true,

  // --- Editor UX synergy ---
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.preview": true,
  "editor.suggest.showStatusBar": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.hover.delay": 150,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggestSelection": "first",

  // --- Code Quality & Automation ---
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "ms-python.python",
  "editor.codeActionsOnSave": {
    "source.fixAll.ruff": "explicit",
    "source.organizeImports.ruff": "explicit"
  },

  // --- Python Specific ---
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,

  // --- Telemetry (mínima) ---
  "telemetry.telemetryLevel": "error",

  // --- Indexing / Cleanliness ---
  "files.exclude": {
    "**/.git": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.venv": true,
    "**/.env": true,
    "**/logs": true
  },
  "search.followSymlinks": true,

  // --- Security / Trust ---
  "security.workspace.trust.enabled": true,
  "github.copilot.filter.toggle.codeReferences": true,

  // --- Chat Presentation ---
  "chat.editor.lineInsertionMode": "below",
  "chat.editor.responseTone": "balanced",

  // --- Startup ---
  "workbench.startupEditor": "none",
  "github.copilot.chat.virtualTools.threshold": 128,
  "github.copilot.chat.agent.thinkingTool": true,
  "chat.agent.maxRequests": 200,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.alternateGptPrompt.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": false,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  "chat.tools.terminal.autoApprove": {
    "cd": true,
    "echo": true,
    "ls": true,
    "pwd": true,
    "cat": true,
    "head": true,
    "tail": true,
    "findstr": true,
    "wc": true,
    "tr": true,
    "cut": true,
    "cmp": true,
    "which": true,
    "basename": true,
    "dirname": true,
    "realpath": true,
    "readlink": true,
    "stat": true,
    "file": true,
    "du": true,
    "df": true,
    "sleep": true,
    "git status": true,
    "git log": true,
    "git show": true,
    "git diff": true,
    "pytest": true,
    "Get-ChildItem": true,
    "Get-Content": true,
    "Get-Date": true,
    "Get-Random": true,
    "Get-Location": true,
    "Write-Host": true,
    "Write-Output": true,
    "Split-Path": true,
    "Join-Path": true,
    "Start-Sleep": true,
    "Where-Object": true,
    "/^Select-[a-z0-9]/i": true,
    "/^Measure-[a-z0-9]/i": true,
    "/^Compare-[a-z0-9]/i": true,
    "/^Format-[a-z0-9]/i": true,
    "/^Sort-[a-z0-9]/i": true,
    "column": true,
    "/^column\\b.*-c\\s+[0-9]{4,}/": false,
    "date": true,
    "/^date\\b.*(-s|--set)\\b/": false,
    "find": true,
    "/^find\\b.*-(delete|exec|execdir|fprint|fprintf|fls|ok|okdir)\\b/": false,
    "grep": true,
    "/^grep\\b.*-(f|P)\\b/": false,
    "sort": true,
    "/^sort\\b.*-(o|S)\\b/": false,
    "tree": true,
    "/^tree\\b.*-o\\b/": false,
    "/\\(.+\\)/": {
      "approve": false,
      "matchCommandLine": true
    },
    "/\\{.+\\}/": {
      "approve": false,
      "matchCommandLine": true
    },
    "/`.+`/": {
      "approve": false,
      "matchCommandLine": true
    },
    "rm": false,
    "rmdir": false,
    "del": false,
    "Remove-Item": false,
    "ri": false,
    "rd": false,
    "erase": false,
    "dd": false,
    "kill": false,
    "ps": false,
    "top": false,
    "Stop-Process": false,
    "spps": false,
    "taskkill": false,
    "taskkill.exe": false,
    "curl": false,
    "wget": false,
    "Invoke-RestMethod": false,
    "Invoke-WebRequest": false,
    "irm": false,
    "iwr": false,
    "chmod": false,
    "chown": false,
    "Set-ItemProperty": false,
    "sp": false,
    "Set-Acl": false,
    "jq": false,
    "xargs": false,
    "eval": false,
    "Invoke-Expression": false,
    "iex": false
  },
  "editor.codeActions.triggerOnFocusChange": true
}
